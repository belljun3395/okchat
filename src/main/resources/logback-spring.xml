<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <include resource="org/springframework/boot/logging/logback/defaults.xml"/>
    
    <!-- Console appender with structured logging -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} [requestId=%X{requestId:-N/A}] [userId=%X{userId:-N/A}] - %msg%n</pattern>
            <charset>UTF-8</charset>
        </encoder>
    </appender>
    
    <!-- JSON appender for production environments (easier to parse by log aggregators) -->
    <appender name="JSON" class="ch.qos.logback.core.ConsoleAppender">
        <encoder class="net.logstash.logback.encoder.LogstashEncoder">
            <includeMdcKeyName>requestId</includeMdcKeyName>
            <includeMdcKeyName>userId</includeMdcKeyName>
            <customFields>{"application":"okchat","environment":"${ENVIRONMENT:-local}"}</customFields>
        </encoder>
    </appender>
    
    <!-- File appender for local development -->
    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>logs/okchat.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>logs/okchat.%d{yyyy-MM-dd}.%i.log</fileNamePattern>
            <timeBasedFileNamingAndTriggeringPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedFNATP">
                <maxFileSize>100MB</maxFileSize>
            </timeBasedFileNamingAndTriggeringPolicy>
            <maxHistory>30</maxHistory>
            <totalSizeCap>3GB</totalSizeCap>
        </rollingPolicy>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} [requestId=%X{requestId:-N/A}] [userId=%X{userId:-N/A}] - %msg%n</pattern>
            <charset>UTF-8</charset>
        </encoder>
    </appender>
    
    <!-- Async appender for better performance -->
    <appender name="ASYNC" class="ch.qos.logback.classic.AsyncAppender">
        <queueSize>512</queueSize>
        <discardingThreshold>0</discardingThreshold>
        <appender-ref ref="CONSOLE" />
    </appender>
    
    <!-- Application loggers -->
    <logger name="com.okestro.okchat" level="INFO"/>
    
    <!-- Spring Framework loggers -->
    <logger name="org.springframework" level="INFO"/>
    <logger name="org.springframework.web" level="INFO"/>
    <logger name="org.springframework.ai" level="INFO"/>
    
    <!-- Database loggers -->
    <logger name="org.hibernate" level="INFO"/>
    <logger name="com.zaxxer.hikari" level="INFO"/>
    
    <!-- External library loggers -->
    <logger name="org.typesense" level="INFO"/>
    <logger name="io.netty" level="WARN"/>
    
    <!-- Root logger -->
    <root level="INFO">
        <appender-ref ref="ASYNC" />
        <appender-ref ref="FILE" />
    </root>
    
    <!-- Profile-specific configurations -->
    <springProfile name="production">
        <root level="INFO">
            <appender-ref ref="JSON" />
        </root>
    </springProfile>
    
    <springProfile name="development">
        <logger name="com.okestro.okchat" level="DEBUG"/>
    </springProfile>
</configuration>
